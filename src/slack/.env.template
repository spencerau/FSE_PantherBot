# Slack Integration Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Required: Slack App Token (starts with xapp-)  
SLACK_APP_TOKEN=xapp-your-app-token-here

# Required: Slack Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here

# Optional: Test channel name for integration tests (without #)
SLACK_TEST_CHANNEL=pantherbot-testing

# Optional: Test user ID for direct message tests
SLACK_TEST_USER=U1234567890

# Optional: Enable debug mode
SLACK_DEBUG=false
